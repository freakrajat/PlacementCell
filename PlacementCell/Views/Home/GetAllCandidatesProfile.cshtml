@model IEnumerable<PlacementCell.Models.CandidateProfileModelForClass>

@{
    ViewBag.Title = "GetAllCandidatesProfile";
}

<link href="https://fonts.googleapis.com/css?family=Lato:100,300,300i,400" rel="stylesheet">

<link href="~/Content/grid.css" rel="stylesheet" />
<link href="~/Content/Site.css" rel="stylesheet" />
<link href="~/Content/ionicons.min.css" rel="stylesheet" />
<link href="~/Content/CreationFile.css" rel="stylesheet" />

<h2>Availbale Candidates Profiles</h2>

<p>
    @Html.ActionLink("Create New", "CreateProfile")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CandidateName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DOB)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Location)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gender)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Percentage10)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Percentage12)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalExp)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CandidateName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DOB)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Location)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Gender)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Percentage10)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Percentage12)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalExp)
        </td>
        <td>
            @Html.ActionLink("Submit Evaluation", "SubmitEvaluationFromList", new { id = item.CanProfileID }) 
            @*@Html.ActionLink("Details", "Details", new { id=item.CanProfileID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.CanProfileID })*@
        </td>
    </tr>
}

</table>
