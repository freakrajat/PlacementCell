@model IEnumerable<PlacementCell.Models.PlacementDBTestForClass>

@{
    ViewBag.Title = "ScheduledTests";
}
<link href="https://fonts.googleapis.com/css?family=Lato:100,300,300i,400" rel="stylesheet">

<link href="~/Content/grid.css" rel="stylesheet" />
<link href="~/Content/Site.css" rel="stylesheet" />
<link href="~/Content/ionicons.min.css" rel="stylesheet" />
<link href="~/Content/CreationFile.css" rel="stylesheet" />

<h2>Scheduled Tests</h2>

<p>
    @Html.ActionLink("Create New", "ScheduleTest")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TestAdministrator)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SelectCandidate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Vacancy)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TestDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TechnicalInterviewDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HrInterviewDate)
        </th>
       
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.EmployeeName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CandidateName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VacancyTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TestDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TechnicalInterviewDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HrInterviewDate)
        </td>
       
        <td>
            @Html.ActionLink("Edit", "EditScheduleTest", new { id=item.TestID }) |
            @Html.ActionLink("Details", "Details", new { id=item.TestID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.TestID })
        </td>
    </tr>
}

</table>
