@model PlacementCell.Models.MailFieldsModel
@{
    ViewBag.Title = "SendMailsToEmployees";
}

<link href="https://fonts.googleapis.com/css?family=Lato:100,300,300i,400" rel="stylesheet">

<link href="~/Content/grid.css" rel="stylesheet" />
<link href="~/Content/ionicons.min.css" rel="stylesheet" />
<link href="~/Content/CreationFile.css" rel="stylesheet" />

<div class="row">
    <h2>Contact Employees</h2>
</div>

@ViewBag.Msg

<div class="row">
    @using (Html.BeginForm("SendMails", "Home"))
    {
        @Html.AntiForgeryToken()

        <div class="contact-form">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


           

            <div class="row">
                <div class="col span-1-of-3 label-class">
                    @Html.LabelFor(model => model.To)
                </div>
                <div class="col span-2-of-3">
                    @Html.DropDownListFor(model => model.To,new SelectList(Model.Emails),"Select Email ID")<br />

                    @Html.ValidationMessageFor(model => model.To, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row">
                <div class="col span-1-of-3 label-class">
                    @Html.LabelFor(model => model.Subject)
                </div>
                <div class="col span-2-of-3">
                    @Html.EditorFor(model => model.Subject)<br />

                    @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="row">
                <div class="col span-1-of-3 label-class">
                    @Html.LabelFor(model => model.Message)
                </div>
                <div class="col span-2-of-3">
                    @Html.TextAreaFor(model => model.Message)<br />

                    @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row">
                <div class="col span-1-of-3">
                    <label>&nbsp;</label>
                </div>
                <div class="col span-2-of-3">
                    <input type="submit" value="Send!" style="margin-top:20px">
                </div>
            </div>

        </div>
    }
</div>


<link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">

<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>

<script type="text/javascript">
    $("#Subject").attr("placeholder", "Enter Subject")
    $("#Message").attr("placeholder","Enter Mesaage Body")
    </script>

