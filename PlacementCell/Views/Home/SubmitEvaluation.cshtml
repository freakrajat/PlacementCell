@model PlacementCell.Models.EvaluationModelForClass

@{
    ViewBag.Title = "SubmitEvaluation";
}

<<link href="https://fonts.googleapis.com/css?family=Lato:100,300,300i,400" rel="stylesheet">

<link href="~/Content/grid.css" rel="stylesheet" />
<link href="~/Content/ionicons.min.css" rel="stylesheet" />
<link href="~/Content/CreationFile.css" rel="stylesheet" />

<div class="row">
    <h2>Submit Candidate Evaluation</h2>
</div>

<div class="row">
    @using (Html.BeginForm("SubmitEvaluation", "Home"))
    {
        @Html.AntiForgeryToken()

        <div class="contact-form">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

           
            <div class="row">
                <div class="col span-1-of-3 label-class">
                    @Html.LabelFor(model => model.CandidateID)
                </div>
                <div class="col span-2-of-3">
                    @Html.DropDownListFor(model => model.CandidateID, new SelectList(Model.CandidateIDList, "CanProfileID", "CandidateName"), "Select Candidate To Evaluate")<br />

                    @Html.ValidationMessageFor(model => model.CandidateID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row">
                <div class="col span-1-of-3 label-class">
                    @Html.LabelFor(model => model.DesignationOffered)
                </div>
                <div class="col span-2-of-3">
                    @Html.EditorFor(model => model.DesignationOffered)<br />

                    @Html.ValidationMessageFor(model => model.DesignationOffered, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row">
                <div class="col span-1-of-3 label-class">
                    @Html.LabelFor(model => model.SalaryAgreed)
                </div>
                <div class="col span-2-of-3">
                    @Html.EditorFor(model => model.SalaryAgreed)<br />

                    @Html.ValidationMessageFor(model => model.SalaryAgreed, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row">
                <div class="col span-1-of-3 label-class">
                    @Html.LabelFor(model => model.DOJ)
                </div>
                <div class="col span-2-of-3">
                    @Html.EditorFor(model => model.DOJ)<br />

                    @Html.ValidationMessageFor(model => model.DOJ, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row">
                <div class="col span-1-of-3 label-class">
                    @Html.LabelFor(model => model.LocationOffered)
                </div>
                <div class="col span-2-of-3">
                    @Html.EditorFor(model => model.LocationOffered)<br />

                    @Html.ValidationMessageFor(model => model.LocationOffered, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="row">
                <div class="col span-1-of-3 label-class">
                    @Html.LabelFor(model => model.InterviewResult)
                </div>
                <div class="col span-2-of-3 dateTimeBox">
                    @{
        List<SelectListItem> listItems = new List<SelectListItem>();
        listItems.Add(new SelectListItem
             {
                 Text = "Selected",
                 Value = "Selected",
                 Selected = true
             });
        listItems.Add(new SelectListItem
             {
                 Text = "Rejected",
                 Value = "Rejected"

             });

                    }
                    @Html.DropDownListFor(model => model.InterviewResult, listItems, "Select Result")<br />

                    @Html.ValidationMessageFor(model => model.InterviewResult, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="row">
                <div class="col span-1-of-3 label-class">
                    @Html.LabelFor(model => model.Comments)
                </div>
                <div class="col span-2-of-3">
                    @Html.TextAreaFor(model => model.Comments)<br />

                    @Html.ValidationMessageFor(model => model.Comments, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row">
                <div class="col span-1-of-3">
                    <label>&nbsp;</label>
                </div>
                <div class="col span-2-of-3">
                    <input type="submit" value="Save" style="margin-top:20px">
                </div>
            </div>

        </div>
    }
</div>


<link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">

<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>

<script type="text/javascript">

    $("#SalaryAgreed").attr("placeholder", "Enter Salary Agreed")
    $("#SalaryAgreed").val("")
    $("#Comments").attr("placeholder", "Enter Optional Comments")
    $("#LocationOffered").attr("placeholder", "Enter Location Offered")
    $("#DOJ").datepicker().attr("placeholder", "Select Joining Date").val("")
    $("#DesignationOffered").attr("placeholder", "Enter Designation Offered")
</script>