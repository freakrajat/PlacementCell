@model PlacementCell.Models.PlacementDBTestForClass
@{
    ViewBag.Title = "ScheduleTest";
}

<link href="https://fonts.googleapis.com/css?family=Lato:100,300,300i,400" rel="stylesheet">

<link href="~/Content/grid.css" rel="stylesheet" />
@*<link href="~/Content/Site.css" rel="stylesheet" />*@
<link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">

<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>


<link href="~/Content/ionicons.min.css" rel="stylesheet" />
<link href="~/Content/CreationFile.css" rel="stylesheet" />
@*<link href="~/Scripts/Choosen/chosen.css" rel="stylesheet" />*@
@*<script src="~/Scripts/Choosen/chosen.jquery.js"></script>*@


<div class="row">
    <h2>Schedule Placement Test</h2>
</div>

<div class="row">

    @using (Html.BeginForm("ScheduleTest", "Home"))
    {
        @Html.AntiForgeryToken()
        <div class="contact-form">

            <hr />

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @Html.HiddenFor(model => model.TestID)

            <div class=row>
                <div class="col span-1-of-3 label-class">
                    @Html.LabelFor(model => model.Vacancy)
                </div>
                <div class="col span-2-of-3">
                    @Html.DropDownListFor(model => model.Vacancy, new SelectList(Model.vacancyList, "VacancyID", "VacancyTitle"), "Select Vacancy")<br />
                    @Html.ValidationMessageFor(model => model.Vacancy, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class=row>
                <div class="col span-1-of-3 label-class">
                    @Html.LabelFor(model => model.SelectCandidate)
                </div>
                <div class="col span-2-of-3">
                    @Html.DropDownListFor(model=>model.SelectCandidate, new SelectList(Model.candidateList, "CanProfileID", "CandidateName"), "Select Candidate")<br />
                    @Html.ValidationMessageFor(model => model.SelectCandidate, "", new { @class = "text-danger" })
                </div>
            </div>



            <div class=row>
                <div class="col span-1-of-3 label-class">
                    @Html.LabelFor(model => model.TestAdministrator)
                </div>
                <div class="col span-2-of-3">
                    @Html.DropDownListFor(model => model.TestAdministrator,new SelectList(Model.employeeList,"EmployeeID","EmployeeName"), "Select Invigilator")<br />
                  
                      @Html.ValidationMessageFor(model => model.TestAdministrator, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row">
                <div class="col span-1-of-3 label-class">
                    @Html.LabelFor(model => model.TestDate)
                </div>
                <div class="col span-2-of-3">
                    @Html.EditorFor(model => model.TestDate)<br />
                    @Html.ValidationMessageFor(model => model.TestDate, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row">
                <div class="col span-1-of-3 label-class">
                    @Html.LabelFor(model => model.TechnicalInterviewDate)
                </div>
                <div class="col span-2-of-3">
                    @Html.EditorFor(model => model.TechnicalInterviewDate)<br />
                    @Html.ValidationMessageFor(model => model.TechnicalInterviewDate, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row">
                <div class="col span-1-of-3 label-class">
                    @Html.LabelFor(model => model.HrInterviewDate)
                </div>
                <div class="col span-2-of-3">
                    @Html.EditorFor(model => model.HrInterviewDate)<br />
                    @Html.ValidationMessageFor(model => model.HrInterviewDate, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="row">
                <div class="col span-1-of-3">
                    <label>&nbsp;</label>
                </div>
                <div class="col span-2-of-3">
                    <input type="submit" value="Save" style="margin-top:20px">
                </div>
            </div>


        </div>
    }
</div>



<script type="text/javascript">

    $("#TestDate").datepicker();
    $("#HrInterviewDate").datepicker();
    $("#TechnicalInterviewDate").datepicker();

    $("#TestAdministrator").chosen();
    $("#SelectCandidate").chosen();
    $("#Vacancy").chosen();





   
</script>